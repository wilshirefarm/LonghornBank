@{
    ViewBag.Title = "Choose An Account";
}

<h2>Make a deposit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Which checking account would you like to make a deposit to?</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Type of Account</label>
            <div class="col-md-10">
                @Html.DropDownList("CheckingAccountID", (SelectList)ViewBag.CheckingAccounts, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Next" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "Deposit", "Transactions", null, new { @class = "btn btn-default" })
</div>


@model Team16LonghornBank.Models.SellStockViewModel

@{
    ViewBag.Title = "SellStock";
}

<h2>Sell Stock</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Your Stocks</label>
            <div class="col-md-10">
                @Html.DropDownList("StockPurchaseID", (SelectList)ViewBag.CustomerStockPurchases, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NumberOfSharesToSell, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumberOfSharesToSell, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NumberOfSharesToSell, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sell" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "Details", "StockPortfolios", new { id = Model.stockPortfolioID }, null )
</div>
@if (Model.Dispute == null)
{
    @Html.ActionLink("Make a dispute?", "Create", "Disputes", new { id = Model.TransactionID }, new { @class = "btn btn-warning" })
}

<p>
    @if (Model.CheckingAccountAffected != null)
    {
        @Html.ActionLink("Back", "Details", "CheckingAccounts", new { id = Model.CheckingAccountAffected.CheckingAccountID }, new { @class = "btn btn-default" })
    }
    @if (Model.SavingsAccountAffected != null)
    {
        @Html.ActionLink("Back", "Details", "SavingsAccounts", new { id = Model.SavingsAccountAffected.SavingsAccountID }, new { @class = "btn btn-default" })
    }
</p>

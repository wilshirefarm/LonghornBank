
@{
    ViewBag.Title = "PurchaseStock";
}

<h2>Purchase Stock</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Which type of an account would you like to purchase stock with?</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Type of Account</label>
            <div class="col-md-10">
                @Html.DropDownList("AccountType", (SelectList)ViewBag.AccountTypes, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Next" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", "Details", "StockPortfolios", new { id = ViewBag.id }, new { @class = "btn btn-default" })
</div>


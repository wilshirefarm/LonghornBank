
@{
    ViewBag.Title = "AddExistingPayee";
}

<h2>Add a Payee</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ActionLink("Create a new payee", "Create", "Payees", null, new { @class = "btn btn-primary" })

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Payee</label>
            <div class="col-md-10">
                @Html.DropDownList("PayeeID", (SelectList)ViewBag.Payees, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Next" class="btn btn-success" />
            </div>
        </div>
    </div>
}